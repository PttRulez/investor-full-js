{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@contracts/(.*)$": "<rootDir>/../../contracts/$1"
  },
  "moduleDirectories": ["node_modules", "<rootDir>/../"]
}
