{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "@contracts/*": ["../contracts/*"],
    },
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": false,
    "target": "ES2021",
  },
}
